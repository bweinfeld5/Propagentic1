# Phase 2 Maintenance Components - Environment Configuration
# PropAgentic Property Management Platform

# ===========================================
# PROJECT INFORMATION
# ===========================================
PROJECT_NAME=PropAgentic
PROJECT_PHASE=Phase 2: Essential Features
FEATURE_FOCUS=Maintenance Management System
GIT_BRANCH=feature/phase2-maintenance-components

# ===========================================
# FIREBASE CONFIGURATION
# ===========================================
REACT_APP_FIREBASE_API_KEY=your_firebase_api_key_here
REACT_APP_FIREBASE_AUTH_DOMAIN=your_firebase_auth_domain_here
REACT_APP_FIREBASE_PROJECT_ID=your_firebase_project_id_here
REACT_APP_FIREBASE_STORAGE_BUCKET=your_firebase_storage_bucket_here
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your_firebase_messaging_sender_id_here
REACT_APP_FIREBASE_APP_ID=your_firebase_app_id_here

# ===========================================
# SENDGRID EMAIL SERVICE (from Phase 1)
# ===========================================
REACT_APP_SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@propagentic.com
SENDGRID_MAINTENANCE_TEMPLATE_ID=your_maintenance_template_id_here

# ===========================================
# MAINTENANCE SYSTEM CONFIGURATION
# ===========================================
# File upload limits
MAX_PHOTO_SIZE_MB=10
MAX_PHOTOS_PER_REQUEST=10
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# Status automation timing (in minutes)
AUTO_REMIND_AFTER_MINUTES=1440
AUTO_ESCALATE_AFTER_MINUTES=4320
AUTO_CLOSE_COMPLETED_AFTER_MINUTES=10080

# Cost limits for automatic approval
AUTO_APPROVE_UNDER_AMOUNT=500
REQUIRE_APPROVAL_OVER_AMOUNT=1000

# ===========================================
# REAL-TIME FEATURES
# ===========================================
# Firestore real-time listeners
ENABLE_REALTIME_UPDATES=true
REALTIME_SYNC_INTERVAL_MS=1000
NOTIFICATION_DEBOUNCE_MS=500

# WebSocket configuration (if used)
WS_ENDPOINT=wss://your-websocket-endpoint.com
WS_RECONNECT_INTERVAL=5000

# ===========================================
# PERFORMANCE CONFIGURATION
# ===========================================
# Pagination and data loading
MAINTENANCE_REQUESTS_PAGE_SIZE=25
LOAD_IMAGES_LAZY=true
ENABLE_INFINITE_SCROLL=true

# Caching
CACHE_MAINTENANCE_DATA_MINUTES=5
CACHE_CONTRACTOR_DATA_MINUTES=15
CACHE_PROPERTY_DATA_MINUTES=30

# ===========================================
# UI/UX CONFIGURATION
# ===========================================
# Theme and display
DEFAULT_THEME=light
ENABLE_DARK_MODE=true
ENABLE_HIGH_CONTRAST=true

# Mobile responsiveness
MOBILE_BREAKPOINT=768px
TOUCH_TARGET_MIN_SIZE=44px
ENABLE_SWIPE_GESTURES=true

# Accessibility
ENABLE_SCREEN_READER=true
ENABLE_KEYBOARD_NAV=true
FOCUS_OUTLINE_COLOR=#f97316

# ===========================================
# DEVELOPMENT ENVIRONMENT
# ===========================================
NODE_ENV=development
REACT_APP_ENV=development
PORT=3000
BROWSER=chrome

# Debugging
REACT_APP_DEBUG_MODE=true
ENABLE_REDUX_DEVTOOLS=true
LOG_LEVEL=debug

# Testing
REACT_APP_TEST_MODE=false
CYPRESS_BASE_URL=http://localhost:3000

# ===========================================
# THIRD-PARTY INTEGRATIONS
# ===========================================
# Google Maps (for contractor routing)
REACT_APP_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Image processing service (optional)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name_here
CLOUDINARY_API_KEY=your_cloudinary_api_key_here
CLOUDINARY_API_SECRET=your_cloudinary_api_secret_here

# Analytics (optional)
REACT_APP_GOOGLE_ANALYTICS_ID=your_ga_id_here
REACT_APP_MIXPANEL_TOKEN=your_mixpanel_token_here

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# CORS settings
ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com
ENABLE_CORS=true

# API rate limiting
API_RATE_LIMIT_REQUESTS=1000
API_RATE_LIMIT_WINDOW_MS=900000

# File upload security
ENABLE_FILE_VIRUS_SCAN=false
MAX_CONCURRENT_UPLOADS=3

# ===========================================
# NOTIFICATION SETTINGS
# ===========================================
# Email notifications
ENABLE_EMAIL_NOTIFICATIONS=true
EMAIL_BATCH_SIZE=50
EMAIL_RETRY_ATTEMPTS=3

# Push notifications (future feature)
ENABLE_PUSH_NOTIFICATIONS=false
PUSH_NOTIFICATION_KEY=your_push_key_here

# SMS notifications (optional)
ENABLE_SMS_NOTIFICATIONS=false
TWILIO_ACCOUNT_SID=your_twilio_sid_here
TWILIO_AUTH_TOKEN=your_twilio_token_here

# ===========================================
# BACKUP AND RECOVERY
# ===========================================
# Data backup
ENABLE_AUTO_BACKUP=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30

# Error tracking
SENTRY_DSN=your_sentry_dsn_here
ENABLE_ERROR_TRACKING=true

# ===========================================
# FEATURE FLAGS
# ===========================================
# Maintenance features
ENABLE_BULK_OPERATIONS=true
ENABLE_CONTRACTOR_RATINGS=true
ENABLE_COST_TRACKING=true
ENABLE_TIME_TRACKING=true
ENABLE_PHOTO_ANNOTATIONS=true

# Advanced features
ENABLE_PREDICTIVE_MAINTENANCE=false
ENABLE_IOT_INTEGRATION=false
ENABLE_AI_CATEGORIZATION=false

# User interface features
ENABLE_DRAG_AND_DROP=true
ENABLE_KEYBOARD_SHORTCUTS=true
ENABLE_CONTEXTUAL_HELP=true
ENABLE_MOBILE_GESTURES=true

# ===========================================
# MONITORING AND ANALYTICS
# ===========================================
# Performance monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_SAMPLE_RATE=0.1

# User analytics
TRACK_USER_INTERACTIONS=true
TRACK_FEATURE_USAGE=true
ANONYMIZE_USER_DATA=true

# Business metrics
TRACK_MAINTENANCE_METRICS=true
TRACK_CONTRACTOR_PERFORMANCE=true
TRACK_COST_ANALYTICS=true

# ===========================================
# LOCALIZATION (Future Feature)
# ===========================================
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr
ENABLE_RTL_SUPPORT=false

# ===========================================
# MAINTENANCE-SPECIFIC SETTINGS
# ===========================================
# Request categories
DEFAULT_CATEGORIES=plumbing,electrical,hvac,general,emergency
EMERGENCY_CATEGORIES=emergency,water_leak,no_heat,electrical_hazard

# Priority levels
PRIORITY_LEVELS=low,medium,high,urgent
AUTO_PRIORITY_RULES=true

# Status workflow
STATUS_WORKFLOW=submitted,assigned,in-progress,completed,cancelled
ALLOW_STATUS_SKIP=false

# Contractor management
ENABLE_CONTRACTOR_SELF_ASSIGNMENT=true
REQUIRE_CONTRACTOR_APPROVAL=false
CONTRACTOR_RATING_SCALE=5

# Communication
ENABLE_IN_APP_MESSAGING=true
ENABLE_EMAIL_THREADS=true
MESSAGE_RETENTION_DAYS=365

# ===========================================
# INTEGRATION TESTING
# ===========================================
# Test data
USE_TEST_DATA=false
TEST_USER_ROLE=landlord
TEST_PROPERTY_COUNT=5
TEST_MAINTENANCE_COUNT=20

# Mock services
MOCK_FIREBASE=false
MOCK_SENDGRID=false
MOCK_STORAGE=false 