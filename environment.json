{
  "project": {
    "name": "PropAgentic",
    "type": "React + Firebase",
    "description": "AI-powered property management SaaS"
  },
  "environment": {
    "NODE_ENV": "development",
    "FIREBASE_PROJECT_ID": "propagentic",
    "SENDGRID_CONFIGURED": true,
    "EMAIL_EXTENSION_ACTIVE": true
  },
  "directories": {
    "functions": "./functions/src/",
    "services": "./src/services/",
    "components": "./src/components/",
    "pages": "./src/pages/",
    "scripts": "./scripts/"
  },
  "email_config": {
    "provider": "SendGrid",
    "method": "Firebase Extension",
    "extension_name": "firestore-send-email",
    "collection": "mail",
    "status": "working",
    "test_email": "410haulers@gmail.com"
  },
  "audit_scope": [
    "nodemailer",
    "transporter",
    "sendMail",
    "createTransport",
    "smtp://",
    "smtps://",
    "email",
    "mail"
  ],
  "priority_files": [
    "functions/src/",
    "src/services/",
    "src/components/",
    "src/pages/"
  ],
  "working_examples": [
    "functions/src/invites.ts",
    "functions/src/notifyAssignedContractor.ts",
    "functions/src/emailSequences.js",
    "functions/notificationDelivery.js"
  ],
  "deliverables": [
    "SENDGRID_AUDIT_REPORT.md",
    "EMAIL_TESTING_RESULTS.md",
    "Updated functions",
    "Email template library"
  ],
  "git": {
    "branch": "feature/sendgrid-integration-audit",
    "base_branch": "main"
  }
} 